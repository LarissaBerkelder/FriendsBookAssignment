<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FriendsBook.Views.PictureSelectPage">
    <ContentPage.Content>

        <Grid RowDefinitions="60,*,60"
              ColumnDefinitions="*,*"
              Margin="20,20,20,20">

            <Button Grid.Row="0"
                    Grid.Column="0"
                    Text="Take picture"
                    Clicked="TakePictureButton" />
            <Button Grid.Row="0"
                    Grid.Column="1"
                    Text="Pick picture from gallery"
                    Clicked="PictureGalleryButton" />



            <Image  Grid.Row="1"
                    Grid.ColumnSpan="2"
                    x:Name="ImageUser" />

            <Button Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Text="Save picture"
                    Clicked="SavePictureButton"
                    IsVisible="false" 
                    x:Name="SaveButton" />
        </Grid>
       
    </ContentPage.Content>
</ContentPage>